@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
 }


    <div class="card">
        <div class="card-header">
            <a asp-action="Create" asp-controller="Category" class="btn btn-success float-right">Kategori Ekle</a>
        </div>
        <div class="card-body">
            <table id="categorytable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Kullanıcı</th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var user in Model)
                {
                <tbody>
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td></td>
                        <td>
                            <a asp-action="AssignMember" asp-controller="AppUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Üye Yap</a>
                            <a asp-action="AssignAdmin" asp-controller="AppUser" asp-route-id="@user.Id" class=" btn btn-sm btn-success">Admin Yap</a>
                        </td>
                    </tr>
                </tbody>
                }

            </table>
        </div>
    </div>




    @section scripts{
    <script>
    $(document).ready(function () {

        $('#categorytable').DataTable();
    });
    </script>
    }
