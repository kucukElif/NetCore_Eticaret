@model Category
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" asp-action="Create" asp-controller="Category" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Kategori Adı</label>
                                <input asp-for="CategoryName" type="text" class="form-control" placeholder="Kategori Adı Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Ana Kategori</label>
                                <select class="form-control custom-select" asp-items="ViewBag.MainCategories">
                                    <option selected="@Model.ID">@Model.CategoryName</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Kategori Açıklama</label>
                                <input asp-for="Description" type="text" class="form-control" placeholder="Açıklama Giriniz">
                            </div>


                        </div>

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Düzenle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>

