@model Product
@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">

                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Ürün Adı</label>
                                <input asp-for="ProductName" type="text" class="form-control" placeholder="Ürün Adı Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Birim Fiyat</label>
                                <input asp-for="UnitPrice" type="text" class="form-control" placeholder="Birim Fiyat Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Stok</label>
                                <input asp-for="Quantity" type="text" class="form-control" placeholder="Stok Adet Giriniz">
                            </div>
                            <div class="form-group">
                                <label>Kategori</label>
                                <select class="form-control custom-select" asp-for="CategoryId" asp-items="ViewBag.Categories" >
                                <option selected="" disabled>
                                    Lütfen Kategori Seçiniz
                                    </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Resim Ekle</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="image"/>
                                        <label class="custom-file-label">Fotoğraf Ekle</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- /.box-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                <!-- Form Element sizes -->


            </div>
        </div>
    </div>
</div>
@section scripts{ 
<script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
<script>
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
</script>

}

