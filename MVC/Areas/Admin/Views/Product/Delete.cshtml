@model Product
@{
    ViewData["Title"] = "Ürün Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Delete" asp-controller="Product" method="post">
            <p>
                @Model.ProductName isimli ürünü silme istediğinizden emin misiniz?
            </p>
            <button class="btn btn-danger">Evet</button>
            <a asp-action="Index" asp-controller="Product" class="btn">İptal</a>
        </form>
    </div>
</div>

