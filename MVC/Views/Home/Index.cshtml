<section class="section-content">
    <div class="container">

        <header class="section-heading">
            <h3 class="section-title">Yeni Ürünler</h3>
        </header><!-- sect-heading -->


        <div class="row">
            @foreach (var p in Model)
            {
                <div class="col-md-3">
                    <div href="#" class="card card-product-grid">
                        <a href="#" class="img-wrap"> <img src="~/images/@p.ImagePath"> </a>
                        <figcaption class="info-wrap">
                            <a href="#" class="title">@p.ProductName</a>

                            <div class="rating-wrap">
                                <ul class="rating-stars">
                                    <li style="width:80%" class="stars-active">
                                        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                                    </li>
                                    <li>
                                        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                                    </li>
                                </ul>
                                <span class="label-rating text-muted"> 34 reviws</span>
                            </div>
                            <div class="mt-2">
                                <var class="price">@p.UnitPrice.ToString("C2")</var> <!-- price-wrap.// -->
                                <a asp-action="AddToCart" asp-controller="Home" asp-route-id="@p.ID" class="btn btn-sm btn-outline-primary float-right">Sepete Ekle <i class="fa fa-shopping-cart"></i></a>
                            </div>
                        </figcaption>
                    </div>
                </div>
            }
            <!-- col.// -->

        </div> <!-- row.// -->

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->

